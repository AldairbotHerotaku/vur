# description	: openjdk-bin version
# homepage	: https://download.java.net

name=openjdk8-bin
version=8
release=1
source="https://builds.openlogic.com/downloadJDK/openlogic-openjdk-jre/8u342-b07/openlogic-openjdk-jre-8u342-b07-linux-x64.tar.gz"

build() {
	cd jdk-18
	mkdir -p $PKG/usr/lib
	mkdir -p $PKG/usr/bin
	mkdir -p $PKG/usr/conf
	mkdir -p $PKG/usr/include
	mkdir -p $PKG/usr/jmods	
	cp -rv lib $PKG/usr/
	cp -rv bin $PKG/usr/
	cp -rv conf $PKG/usr/
	cp -rv include $PKG/include/
	cp -rv jmods $PKG/jmods/
}
